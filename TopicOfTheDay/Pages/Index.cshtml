@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  max-width: 320px;
  margin: auto;
  text-align: center;
  font-family: arial;
}

.price {
  color: grey;
  font-size: 22px;
}

.card button {
  border: none;
  outline: 0;
  padding: 12px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
  font-size: 18px;
}

.card button:hover {
  opacity: 0.7;
}
</style>
</head>
<body>

<h2 style="text-align:center">Topic</h2>

<div class="card">
  <img src="/adminPic.jpg" alt="admin" style="width:100%">
  <h1>Pay Fees</h1>
  <p class="price">$5328.97</p>
  <p>Please pay the fee today by clicking the below payment link to avoid the fines</p>
  <p><button>Pay Here</button></p>
</div>

</body>
</html>

